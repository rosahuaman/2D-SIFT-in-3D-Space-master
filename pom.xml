			<organization>CREATIS Lab / The University of Lyon</organization>
			<organizationUrl>http://www.creatis.insa-lyon.fr/site/index.html</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>cmurtin</id>
			<name>Chloe MURTIN</name>
			<email>chloe.murtin@gmail.com</email>
